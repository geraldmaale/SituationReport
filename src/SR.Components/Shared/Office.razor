<RadzenCard class="col-md-4">
    <div class="row">
        <div class="col-10">
            <h3>@OfficeName</h3>
            <h5>@Location</h5>
        </div>
        <div class="col-2">
            <RadzenButton Icon="edit" 
                          Size="ButtonSize.Medium"
                          Click="@ViewOffice"/>
        </div>
    </div>
    <hr>
    <div class="row">
        @Content
    </div>
</RadzenCard>



@code {

    [Parameter] public RenderFragment? Content { get; set; }
    [Parameter] public string? OfficeName { get; set; }
    [Parameter] public string? Location { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> ViewOffice { get; set; }
    
}