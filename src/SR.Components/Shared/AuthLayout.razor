@inherits LayoutComponentBase
<PageInfo Title="Home" ApplicationName="GIBS Election"/>

<div class="page-wrapper auth">
    <div class="page-inner">
        <div class="page-content-wrapper bg-transparent m-0">
            <div class="height-10 w-100 shadow-lg px-4 bg-brand-gradient">
                <div class="d-flex align-items-center container p-0">
                    <div class="page-logo width-mobile-auto m-0 align-items-center justify-content-center p-0 bg-transparent bg-img-none shadow-0 height-9 border-0">
                        <a href="/" class="page-logo-link press-scale-down d-flex align-items-center">
                            <img src="images/evoter-w.svg" alt="Ideas Voting" aria-roledescription="logo">
                            <span class="page-logo-text mr-1">Situation Desk</span>
                        </a>
                    </div>

                    <span class="text-white opacity-50 ml-auto mr-2 hidden-sm-down">
                        Has account?
                    </span>
                    <a href="identity/account/login" class="btn-link text-white ml-auto ml-sm-0">
                        Secure Login
                    </a>
                </div>
            </div>
            <div class="flex-1">
                <div class="container py-4 py-lg-5 my-lg-5 px-4 px-sm-0">
                    <div class="row">
                        <main>
                            @Body
                        </main>
                    </div>
                    <div class="position-absolute pos-bottom pos-left pos-right p-3 text-center">
                        <a href="https://greatideasgh.org"
                           class="text-dark text-muted" 
                           title="GreatIdeas Business Solutions"
                           target="_blank"
                           rel="noopener noreferrer">
                            Developed by GreatIdeas Business Solutions &copy; @DateTime.UtcNow.Year
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

